<configuration name="monitor_permissions.conf" description="Monitor Permissions">
    <settings>
        <param name="monitor-enabled" value="true"/>
        <param name="whisper-enabled" value="true"/>
        <param name="conference-enabled" value="true"/>
    </settings>

    <permissions>
        <!-- Supervisor permissions -->
        <permission name="supervisor" level="admin">
            <param name="monitor" value="true"/>
            <param name="whisper" value="true"/>
            <param name="conference" value="true"/>
            <param name="eavesdrop" value="true"/>
        </permission>

        <!-- Manager permissions -->
        <permission name="manager" level="user">
            <param name="monitor" value="true"/>
            <param name="whisper" value="true"/>
            <param name="conference" value="true"/>
            <param name="eavesdrop" value="false"/>
        </permission>

        <!-- Agent permissions -->
        <permission name="agent" level="basic">
            <param name="monitor" value="false"/>
            <param name="whisper" value="false"/>
            <param name="conference" value="true"/>
            <param name="eavesdrop" value="false"/>
        </permission>
    </permissions>

    <extension-permissions>
        <!-- Extension 1001 - Supervisor -->
        <extension id="1001" permission="supervisor"/>

        <!-- Extension 1003 - Manager -->
        <extension id="1003" permission="manager"/>

        <!-- Other extensions - Agent -->
        <extension id="1000" permission="agent"/>
        <extension id="1002" permission="agent"/>
        <extension id="1004" permission="agent"/>
        <extension id="1005" permission="agent"/>
    </extension-permissions>
</configuration>
