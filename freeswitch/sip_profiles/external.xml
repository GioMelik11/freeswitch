<profile name="external">
  <!-- External SIP Profile for Trunks -->

  <aliases>
  </aliases>

  <gateways>
    <X-PRE-PROCESS cmd="include" data="external/*.xml"/>
  </gateways>

  <domains>
    <domain name="all" alias="false" parse="true"/>
  </domains>

  <settings>
    <param name="debug" value="0"/>
    <param name="sip-trace" value="no"/>
    <param name="sip-capture" value="no"/>
    <param name="rfc2833-pt" value="101"/>
    <param name="sip-port" value="$${external_sip_port}"/>
    <param name="dialplan" value="XML"/>
    <param name="context" value="public"/>
    <param name="dtmf-duration" value="2000"/>
    <param name="inbound-codec-prefs" value="$${global_codec_prefs}"/>
    <param name="outbound-codec-prefs" value="$${outbound_codec_prefs}"/>
    <param name="hold-music" value="$${hold_music}"/>
    <param name="rtp-timer-name" value="soft"/>
    <param name="local-network-acl" value="localnet.auto"/>
    <param name="manage-presence" value="false"/>
    <param name="inbound-codec-negotiation" value="generous"/>
    <param name="nonce-ttl" value="60"/>
    <param name="auth-calls" value="$${external_auth_calls}"/>
    <param name="inbound-late-negotiation" value="true"/>
    <param name="rtp-ip" value="$${local_ip_v4}"/>
    <param name="sip-ip" value="$${local_ip_v4}"/>
    <param name="ext-rtp-ip" value="$${external_rtp_ip}"/>
    <param name="ext-sip-ip" value="$${external_sip_ip}"/>
    <param name="media-timeout" value="300"/>
    <param name="media-hold-timeout" value="1800"/>

    <!-- Media handling for external trunk -->
    <param name="apply-nat-acl" value="nat.auto"/>
    <param name="aggressive-nat-detection" value="true"/>
    <param name="inbound-proxy-media" value="false"/>
    <param name="outbound-proxy-media" value="false"/>
    <param name="NDLB-received-in-nat-reg-contact" value="true"/>
    <param name="NDLB-broken-auth-hash" value="true"/>
    <param name="NDLB-force-rport" value="true"/>
    <param name="NDLB-force-rport-reg" value="true"/>
    <param name="NDLB-force-rport-invite" value="true"/>
    <param name="NDLB-force-rport-options" value="true"/>
    <param name="NDLB-force-rport-subscribe" value="true"/>
    <param name="NDLB-force-rport-notify" value="true"/>
    <param name="NDLB-force-rport-message" value="true"/>
    <param name="NDLB-force-rport-refer" value="true"/>
    <param name="NDLB-force-rport-info" value="true"/>
    <param name="NDLB-force-rport-update" value="true"/>
    <param name="NDLB-force-rport-prack" value="true"/>
    <param name="NDLB-force-rport-bye" value="true"/>
    <param name="NDLB-force-rport-cancel" value="true"/>
    <param name="NDLB-force-rport-ack" value="true"/>
    <param name="rtp-nat-helper" value="true"/>
    <param name="rtp-rewrite-timestamps" value="true"/>

    <!-- TLS settings -->
    <param name="tls" value="$${external_ssl_enable}"/>
    <param name="tls-only" value="false"/>
    <param name="tls-bind-params" value="transport=tls"/>
    <param name="tls-sip-port" value="$${external_tls_port}"/>
    <param name="tls-passphrase" value=""/>
    <param name="tls-verify-date" value="true"/>
    <param name="tls-verify-policy" value="none"/>
    <param name="tls-verify-depth" value="2"/>
    <param name="tls-verify-in-subjects" value=""/>
    <param name="tls-version" value="$${sip_tls_version}"/>
    <param name="tls-ciphers" value="$${sip_tls_ciphers}"/>

  </settings>
</profile>