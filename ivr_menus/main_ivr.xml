<include>
  <!-- Main IVR Menu -->
  <menu name="main_ivr" greet-long="phrase:main_menu" greet-short="phrase:main_menu_short" invalid-sound="ivr/ivr-that_was_an_invalid_entry.wav" exit-sound="voicemail/vm-goodbye.wav" confirm-macro="" confirm-key="" tts-engine="flite" tts-voice="rms" confirm-attempts="3" timeout="10000" inter-digit-timeout="2000" max-failures="3" max-timeouts="3" digit-len="1">

    <!-- Press 1 for Support -->
    <entry action="menu-exec-app" digits="1" param="transfer 2000 XML default"/>

    <!-- Press 2 for Sales -->
    <entry action="menu-exec-app" digits="2" param="transfer 2001 XML default"/>

    <!-- Press 3 for Directory -->
    <entry action="menu-sub" digits="3" param="directory_menu"/>

    <!-- Press 4 for Voicemail - DISABLED -->
    <!--
    <entry action="menu-exec-app" digits="4" param="transfer *98 XML default"/>
    -->

    <!-- Press 0 for Operator -->
    <entry action="menu-exec-app" digits="0" param="transfer operator XML default"/>

    <!-- Press 9 to repeat menu -->
    <entry action="menu-top" digits="9"/>

    <!-- Direct extension dialing -->
    <entry action="menu-exec-app" digits="/^(10[0-9][0-9])$/" param="transfer $1 XML default"/>

  </menu>

  <!-- Directory Submenu -->
  <menu name="directory_menu" greet-long="phrase:directory_menu" greet-short="phrase:directory_menu_short" invalid-sound="ivr/ivr-that_was_an_invalid_entry.wav" exit-sound="voicemail/vm-goodbye.wav" timeout="10000" max-failures="3" max-timeouts="3">

    <!-- Press * to return to main menu -->
    <entry action="menu-top" digits="*"/>

    <!-- Direct extension dialing -->
    <entry action="menu-exec-app" digits="/^(10[0-9][0-9])$/" param="transfer $1 XML default"/>

  </menu>

</include>
